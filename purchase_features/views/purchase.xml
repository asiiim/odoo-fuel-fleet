<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="terminal_id" options="{'no_quick_create': True}"/>
                <field name="carrier_id" options="{'no_quick_create': True}"
                context="{'default_is_carrier': True}"
                widget="res_partner_many2one"
                placeholder="Carriers, Trucking Companies..."/>
                <field name="lift_datetime"/>
            </field>

            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field name="realtime_cost" invisible="1"/>
                <button type="object" name="action_view_realtime_cost" icon="fa-external-link" class="text-danger"/>
                <!-- <button name="action_view_realtime_cost" string="Cost" class="oe_highlight" type="object" attrs="{'invisible': [('realtime_cost', '=', False)]}"/> -->
            </xpath>
        </field>
    </record>
</odoo>